@using JolDos2.Data
@model IEnumerable<Trip> 
@{
    ViewData["Title"] = "ReadMore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@(TempData["AlertType"] ?? "info")">
        @TempData["AlertMessage"]
    </div>
}
<div class="card">
    <div class="title">Trip details</div>
    @foreach(var trips in Model){
    <div class="info">
        <div class="row">
            <div class="col-6">
                <span id="heading">id</span><br>
                <span id="details"></span>
            </div>
@*            <div class="col-6 pull-right">
                <span id="heading">@trips.Id </span><br>
                <span id="details"></span>
            </div>*@
        </div>      
    </div>      
    <div class="pricing">
        <div class="row">
            <div class="col-6">
                <span id="name">From</span>  
            </div>
            <div class="col-6">
                <span id="price">@trips.FromLoc</span>
            </div>
        </div>
        <div class="row">   
            <div class="col-6">
                <span id="name">To</span>  
            </div>
            <div class="col-6">
                <span id="price">@trips.ToLoc</span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <span id="name">Date</span>
            </div>
            <div class="col-6">
                <span id="price">@trips.DateOfTrip</span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <span id="name">Seats</span>
            </div>
            <div class="col-6">
                <span id="price">@trips.Seats</span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <span id="name">Driver name</span>
            </div>
            <div class="col-6">
                <span id="price">@trips.DriverId</span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <span id="name">Driver number </span>
            </div>
            <div class="col-6">
                <span id="price">+996234567822</span>
            </div>
        </div>
    </div>
    <div class="total">
        <div class="row">
            <div class="col-6">Fare </div>
            <input type="hidden" name="tripId" id="id"  value="@trips.Trip_id" />
        </div>

    <div class="w-75 btn-group" role="group">
        <a asp-controller="Home" asp-action="Book" asp-route-id="@trips.Trip_id"
        class="btn  btn-primary mx-3 "><i class="bi bi-pencil-square"></i>Book</a>
    </div>
    </div>  

}
</div>
</body>







